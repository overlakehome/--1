#!/usr/bin/env bash

wget -P /tmp/ http://dl.dropbox.com/u/47820156/bin/p4merge-mac-osx-01-2013.zip
unzip -o /tmp/p4merge-mac-osx-03-2012.zip -d /Applications/

wget -P /usr/local/bin/ https://github.com/henry4j/-/raw/master/bin/p4merge
wget -P /usr/local/bin/ https://github.com/henry4j/-/raw/master/bin/p4diff
chmod +x /usr/local/bin/p4merge
chmod +x /usr/local/bin/p4diff
